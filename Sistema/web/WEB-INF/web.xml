<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>realizaPedido</servlet-name>
        <servlet-class>br.com.Controle.realizaPedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cadastrarProduto</servlet-name>
        <servlet-class>br.com.Controle.cadastrarProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>alterarProduto</servlet-name>
        <servlet-class>br.com.Controle.alterarProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>consultarIdProduto</servlet-name>
        <servlet-class>br.com.Controle.consultarIdProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>criarCliente</servlet-name>
        <servlet-class>br.com.Controle.criarCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>consultarToken</servlet-name>
        <servlet-class>br.com.Controle.consultarToken</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>receberIdCliente</servlet-name>
        <servlet-class>br.com.Controle.receberIdCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>consultarByCliente</servlet-name>
        <servlet-class>br.com.Controle.consultarByCliente</servlet-class>
    </servlet>
    <servlet>
        <description>faz o login</description>
        <servlet-name>loginUsuario</servlet-name>
        <servlet-class>br.com.Controle.AutenticaLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>alterarCadastro</servlet-name>
        <servlet-class>br.com.Controle.alterarCadastro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>excluirPedido</servlet-name>
        <servlet-class>br.com.Controle.excluirPedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>alterarEstoque</servlet-name>
        <servlet-class>br.com.Controle.alterarEstoque</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>removerPedido</servlet-name>
        <servlet-class>br.com.Controle.removerPedido</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>realizaPedido</servlet-name>
        <url-pattern>/RP</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cadastrarProduto</servlet-name>
        <url-pattern>/CP</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>consultarIdProduto</servlet-name>
        <url-pattern>/CIP</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>criarCliente</servlet-name>
        <url-pattern>/CC</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>consultarToken</servlet-name>
        <url-pattern>/CT</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>receberIdCliente</servlet-name>
        <url-pattern>/RIC</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>consultarByCliente</servlet-name>
        <url-pattern>/CBC</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginUsuario</servlet-name>
        <url-pattern>/LU</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>alterarCadastro</servlet-name>
        <url-pattern>/AU</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>excluirPedido</servlet-name>
        <url-pattern>/EP</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>alterarProduto</servlet-name>
        <url-pattern>/SP</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>alterarEstoque</servlet-name>
        <url-pattern>/AE</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>removerPedido</servlet-name>
        <url-pattern>/RMP</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
